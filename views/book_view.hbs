          var i;
          for (i = 0; i < x.length; i++) {
            if(x[i].innerHTML == "1"){
              x[i].innerHTML = "YES";
            }
            else{
              x[i].innerHTML = "NO";
            }
            
          }
          
    });
</script>
</body>
</html>