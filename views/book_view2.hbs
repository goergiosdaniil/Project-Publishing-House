<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Εκδοτικός Οίκος</title>
  <link href="css/bootstrap.css" rel="stylesheet" type="text/css"/>
</head>
<body>
  <div class="container">
    <h2>Book List Μπορείς να τη δεις μόνο αν είσαι γραμμένος</h2>
        
    <table class="table table-striped" id="mytable">
      <thead>
        <tr>
          <th>Βοοk ID</th>
          <th>Βook title</th>
          <th>Book Description</th>
          <th>Βοοk Cover</th>
          <th>Βook Author</th>
          <th>Book Reviewer</th>
          <th>Βοοk is Written</th>
          <th>Βook is reveiwed</th>
          <th>Book is published</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
         {{#each results}}
        <tr>
          <td>{{ book_id }}</td>
          <td>{{ book_title }}</td>
          <td>{{ book_description }}</td>
          <td>{{ book_cover }}</td>
          <td>{{ book_author_id }}</td>
          <td>{{ book_reviwer_id }}</td>
          <td>{{ book_is_written }}</td>
          <td>{{ book_is_reviewed }}</td>
          <td>{{ book_is_published }}</td>
          <td>
                      <a href="javascript:void(0);" class="btn btn-sm btn-info edit" data-id="{{ book_id }}" data-book_title="{{ book_title }}" data-book_description="{{ book_description }}">Edit</a>
          </td>
          
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
 
<form action="/update" method="post">
       <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Edit book</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="form-group">
                  <input type="text" name="book_title" class="form-control book_title" placeholder="book_title" required>
              </div>
 
              <div class="form-group">
                  <input type="text" name="book_description" class="form-control book_description" placeholder="book_description" required>
              </div>
            </div>
            <div class="modal-footer">
              <input type="hidden" name="id" class="book_id">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Update</button>
            </div>
          </div>
        </div>
       </div>
  </form>
     
 <script>
$(document).ready(function(){
  $('#mytable').on('click','.edit',function(){
    var book_id = $(this).data('id');
    var book_title = $(this).data('book_title');
    var book_description = $(this).data('book_description');
    $('#EditModal').modal('show');
    $('.book_title').val(book_title);
    $('.book_description').val(book_description);
    $('.book_id').val(book_id);
  });
});
</script>
<script src="js/jquery-3.5.0.js"></script>
<script src="js/bootstrap.js"></script>

</body>
</html>